.label {
    margin-left: 3px;
    margin-bottom: 5px;
    -unity-font-style: bold;
}

.buttons-container {
    flex-direction: row;
    flex-wrap: wrap;
}

.quicktool-button {
    width: 50px;
    height: 50px;
    align-items: center;
    justify-content: center;
}

.quicktool-button-icon {
    width: 40px;
    height: 40px;
}

.quicktool-button-icon:hover {
    opacity: 1;
}

.quicktool-button:active > .quicktool-button-icon {
    opacity: 0.6;
}